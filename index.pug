                                                    .item
                                                        img.img-absolute(src="../assets/product-2-small.jpg", alt="")
                                                    .item
                                                        img.img-absolute(src="../assets/product-2-small.jpg", alt="")
                                                    .item
                                                        img.img-absolute(src="../assets/product-2-small.jpg", alt="")
                                        .col-md-5
                                            .product_detail
                                                h1.my-4.text-center Da Nang -  Hue - Hoi An
                                                .product_duration Duration: 
                                                    b 2days
                                                .product_price Price:
