extends layout.pug  

block content
    //- carousel                                 
    include carousel.pug
    //- recent places
    .container
        .d-flex.row.justify-content-center
            .col-sm-8
                h1.my-4.text-center Most Recent Places
                p.mb-4.text-center List of most recent interesting places and events in our directory submitted by our users. Check whats going on in the city now.
        .row.mb-4
            -const places = [{name:"Da Nang",price:235},{name:"Ha Noi",price:235},{name:"Sapa",price:235},{name:"HCM",price:235},{name:"Ha Long",price:235},{name:"Da Lat",price:235},{name:"Hoi An",price:235},{name:"Quang Binh",price:235}];
            each n in places
                .col-sm-6.col-md-3
                    .mycard.mb-4
                        img.img-absolute(src="../assets/test-1.jpg", alt="")
                        .info.d-flex.align-items-center.justify-content-center.flex-column
                            h3= n.name
                            button.btn.btn-primary.btn-lg.btn-price(type="button" data-toggle="modal" data-target="#myModal")= n.price + "$"
        //- modal box
        .row
            .col
                #myModal.modal
                    .modal-dialog
                        .modal-content
                            .modal-header
                                button.close(type="button" data-dismiss="modal") &times;
                            .modal-body
                                .container
                                    .row.product.pt-4
                                        .col-md-7
                                            .product_carousel
                                                #sync1.owl-carousel.owl-theme
