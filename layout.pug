                                    td
                                        b TIN:
                                    td 0901234567
                    .col-md-4.d-flex.flex-column.justify-content-between
                        h1.my-4.text-white Contact info
                        .social
                            .social_heading.text-white.mb-2
                                b
                                    |FAQs
                                    br
                                    |Recruitments
                            .social_icons.pb-2
                                i.fab.fa-facebook-f.fa-2x
                                i.fab.fa-instagram.fa-2x
                                i.fab.fa-skype.fa-2x
                                i.fab.fa-youtube.fa-2x
                    .col-md-4.d-flex.flex-column.justify-content-between
                        h1.my-4.text-white Get info
                        .form-info.pb-2
                            form(action="#")
                                .form-group
                                    input#inputNameFooter.form-control(type="text" placeholder="Your name...")
                                .input-group
                                    input#inputEmailFooter.form-control(type="email" placeholder="Your email...")
                                    .input-group-append
